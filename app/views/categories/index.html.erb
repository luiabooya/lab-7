<h1>Categories</h1>

<table class='table table-striped table-condensed'>
  <tr>
    <th>Name</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= link_to category.name, category %></td>
    <td><%= category.active %></td>
    <td><%= link_to "Edit", edit_category_path(category), :class => 'btn btn-primary btn-xs' %></td>
    <td><%= link_to 'Delete', category, :class => 'btn btn-danger btn-xs', confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

