<!DOCTYPE html>
<html>

<head>
  <title>BookManager :: <%= controller.controller_name.capitalize %> - <%= controller.action_name.capitalize %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>


<body>
  <%= render partial: 'partials/navbar' %>
	
  <div class="container-fluid"> <!-- EVERYTHING HAS TO BE INSIDE THIS DIV-->
	  
	  <% flash.each do |name,msg| %>
		  <div class="alert alert-success <%= :notice ? "success" : "warning" %> radius">
			  <a href="#" class="close">&times;</a>
			  <%= msg %>
		  </div>
	  <% end %>
	  
	  <div class="row">
		  <div class="col-md-8">
			  <!-- MAIN CONTENT GOES HERE -->
			  <%= yield %>
			  <%= javascript_include_tag "application" %>
		  </div>
		  
		  <div class="col-md-1">
		  </div>
		  
		  <div class="col-md-3">
			  <!-- SIDEBAR CONTENT GOES HERE -->
			  <%= render 'partials/quick_links' %>
		  </div>
	  </div>
	  
	  <footer>
		  <div class="row">
			  <div class="col-md-6 col-md-offset-3">
				  <%= render 'partials/footer'%>
			  </div>
	  </footer>
   	
   
  </div> <!-- EVERYTHING HAS TO BE INSIDE THIS DIV-->
</body>

</html>
