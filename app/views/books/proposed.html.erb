<h2>Proposed Books</h2>

<table class='table table-striped table-condensed'>
  <tr>
    <th>Title</th>
    <th>Category</th>
		<th>Proposal Date</th>
		<th>Author (first)</th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= link_to book.title, book_path(book) %></td>
    <td><%= book.category.name %></td>
		<td><%= book.proposal_date.strftime("%m/%d/%y") %></td>
		<td><%= book.authors.alphabetical.first.name %></td>
    <td><%= link_to 'Edit', edit_book_path(book), :class => 'btn btn-primary btn-xs' %></td>
    <td><%= link_to 'Delete', book, :class => 'btn btn-danger btn-xs', confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<br />
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate @books, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>

<br />
