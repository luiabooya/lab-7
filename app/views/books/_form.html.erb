<%= form_for(@book) do |f| %>
	<%= hidden_field_tag "book[author_ids][]", nil%>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class='row'>
	<div class='col-md-8'>
				
				<h2>Book details:</h2>
			  <div class="form-group">
			    <%= f.label :title %>
			    <%= f.text_field :title, class: "form-control" %>
			  </div>
			  <div class="form-group">
			    <%= f.label :category_id %><br />
			    <%= f.collection_select :category_id, Category.alphabetical, :id, :name, {:prompt => "Select ..."}, {:class => "form-control"} %>		
			  </div>

				<div class="form-group">
			    <%= f.label :proposal_date %><br />
			    <%= f.date_select :proposal_date, {:order => [:month, :day, :year]}, {:class => "form-control date_select"} %>
			  </div>

				<div class="form-group">
			    <%= f.label :contract_date %><br />
			    <%= f.date_select :contract_date, {:order => [:month, :day, :year], :prompt => true}, {:class => "form-control date_select"} %>
			  </div>

				<div class="form-group">
			    <%= f.label :published_date %><br />
			    <%= f.date_select :published_date, {:order => [:month, :day, :year], :prompt => true}, {:class => "form-control date_select"} %>
			  </div>
			
				<div class="form-group">
			    <%= f.label :units_sold %><br />
			    <%= f.text_field :units_sold, class: "form-control" %>
			  </div>
			
				<div class="form-group">
			    <%= f.label :notes %><br />
			    <%= f.text_area :notes, :cols => 25, :rows => 10, class: "form-control" %>
			  </div>
			
			  <div class="actions">
			    <%= f.submit :class => 'btn btn-default' %>
			  </div>
			  
	</div> <!-- close col-md-8 -->
			  
	<div class='col-md-4'>

				<h2>Add author(s):</h2>
				<%= render :partial => 'authors_checkboxes' %>
				
	</div> <!-- close col-md-8 -->
</div> <!-- close row -->	

<% end %>
